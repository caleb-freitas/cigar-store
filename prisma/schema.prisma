generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  id        String   @id @default(uuid())
  cnpj      String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  Cigar Cigar[]
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Cigar {
  id        String   @id @default(uuid())
  storeId   String?
  name      String
  brand     String
  value     Float
  stock     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  Store Store? @relation(fields: [storeId], references: [id])
}
